<header 
  class="sticky md:fixed inset-0 md:inset-x-0 md:w-28 h-16 md:h-full flex md:flex-col justify-center md:justify-between items-center text-xl md:text-2xl bg-white border-r-0 md:border-r border-b md:border-b-0 border-solid border-blue-100 z-10"
  :class="! isOpen ? '': ''"
>
  <svg class="hidden md:block absolute top-0 left-12" viewBox="0 0 75 150"><text class="stroke-current stroke-1 md:rotate-90" x="40" y="-1" text-anchor="start">{{ title }}</text></svh>
  <div></div>
  <span
    class="cursor-pointer select-none text-4xl p-3 md:p-10"
    :aria-expanded="isOpen"
    aria-controls="nav-list"
    @click="isOpen = !isOpen"
    x-text="isOpen ? '&#9932;' : '&#9776;'"
  ></span>
  <div class="hidden md:flex flex-col justify-between gap-4 m-6 items-center">
    <div class="bg-blue-200 h-12 w-12"></div>
    <div class="bg-blue-300 h-12 w-12"></div>
  </div>
</header>
