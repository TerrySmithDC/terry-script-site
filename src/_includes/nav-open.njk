<nav 
  class="fixed top-16 left-0-28 bottom-0 right-0 z-20 bg-white h-screen"
  :hidden="!isOpen" id="nav-list"
  aria-hidden="true"
>
  <ul class="flex flex-col text-5xl text-center divide-double divide-y-4 divide-blue-100">
    {% for item in navigation %}
      <li class="flex w-full hover:bg-blue-50">
        <a
          class="{{ 'bg-clip-text text-transparent bg-gradient-to-tr to-purple-500 from-blue-200' if page.url == item.route }} font-sans w-screen py-10"
          href="{{ item.route }}"
        >
          {{ item.name }}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>
